{
  "name": "@shooontan/google-home-notifier",
  "version": "0.0.5",
  "description": "Pure JavaScript Google-Home notifier",
  "main": "build/index.js",
  "license": "MIT",
  "private": false,
  "keywords": [
    "Google-Home",
    "google-home-notifier"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shooontan/google-home-notifier.git"
  },
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf ./build",
    "dev": "tsc --watch",
    "test": "jest --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "castv2-client": "^1.2.0",
    "google-tts-api": "^0.0.4",
    "mdns-js": "^1.0.3"
  },
  "devDependencies": {
    "@shooontan/tsconfig": "^0.0.1",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.4",
    "jest": "^24.9.0",
    "ts-jest": "^24.2.0",
    "typescript": "4.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "files": [
    "build"
  ]
}
